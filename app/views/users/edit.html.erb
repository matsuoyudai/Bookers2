<br>
<h2>User info</h2>

<%= form_for(@user) do |f| %>

  <%= render 'layouts/error', resource: @user %>

  <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :profile_image, class: "user_image" %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <br>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>